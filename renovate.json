{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>nuxt/renovate-config-nuxt"
  ],
  "ignoreDeps": [
    "vue"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "vue"
      ],
      "allowedVersions": "!/3$/"
    },
    {
      "matchPackageNames": [
        "h3"
      ],
      "groupName": "h3"
    },
    {
      "matchPackageNames": [
        "vue-router"
      ],
      "allowedVersions": "!/4$/"
    },
    {
      "matchPackageNames": [
        "nuxt"
      ],
      "allowedVersions": "!/3$/"
    },
    {
      "groupName": "nuxt core",
      "groupSlug": "nuxt",
      "matchPackageNames": [
        "nuxi",
        "/^@nuxt//"
      ],
      "allowedVersions": "!/3$/"
    },
    {
      "matchPackageNames": [
        "@unhead/vue",
        "@unhead/ssr",
        "@unhead/schema"
      ],
      "allowedVersions": "!/1$/"
    }
  ]
}
